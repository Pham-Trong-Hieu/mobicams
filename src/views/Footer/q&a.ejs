<html lang="en">
  <head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="zalo-platform-site-verification" content="PSEX9fhSSpzBzzaJhU9q3t7J_ZITeonYCZ0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta meta name="viewport" content="width=device-width, height=device-height, initial-scale=1" />
    <meta property="og:type" content="mobicam" />
    <meta property="og:title" content="MOBICAM - Camera giám sát hành trình" />
    <meta property="og:image" content="/images/title/mobicam.png" />
  
    <meta name="facebook-domain-verification" content="mwno5jfbxfv9f69o6oivj5f2vhwb3a" />
    <meta name="description"
      content="Là bộ thiết bị camera giám sát hành trình, đã được cấp đầy đủ các chứng nhận theo quy định như TCVN13396 của Bộ KHCN, QCVN55, QCVN117 của Bộ TTTT và QCVN31 của Bộ GTVT." />
    <title>Camera giám sát hành trình MobiCAM</title>
    <%- include('../partials/head.ejs') %>
    <style>
      a{
        display: inline !important;
      }
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #eff2f7;
      }
      .footer_follow-item .change_image_area {
        display: none;
      }
      .root {
        margin-top: 120px;
        min-height: 100vh;
        padding-top: 50px;
      }

      section {
        position: relative;
        max-width: 960px;
        margin: 0 auto;
      }

      .head h3 {
        color: #ff5e5e;
        font-size: 30px;
        margin-bottom: 50px;
        font-weight: 700;
      }

      .qa-body {
        display: flex;
        justify-content: space-between;
      }

      .qa-item {
        cursor: pointer;
        margin-bottom: 20px;
        border-bottom: 1px solid var(--white-color);
      }

      .qa-item-tab {
        margin-bottom: 10px;
        cursor: pointer;
        padding: 8px 10px;
        border-radius: 4px;
        min-width: 260px;
        color: #333;
        font-weight: 500;
        transition: background-color 0.3s ease;
        /* Độ trễ và hiệu ứng màu nền */
      }

      .tab-qa-name {
        align-items: center;
        color: #333;
        font-size: 20px;
        font-weight: 600;
      }

      .qa-item-tab.selected {
        background-color: #d3d3d3;
        /* Màu nền khi được chọn */
      }

      .qa-item-tab:hover,
      .qa-item-tab:active {
        background-color: #d3d3d3;
        cursor: pointer;
      }

      .content-qa-section {
        margin: 20px 30px 20px 20px;
        border-bottom: 2px solid white;
        padding-left: 12px;
        max-width: 480px;
      }

      .qa-name {
        display: flex;
        justify-content: space-between;
        font-size: 18px;

        padding: 0px 0px 0px 30px;
        margin-bottom: 20px;
        color: #333;
        font-weight: 600;
        align-items: baseline;
      }

      .qa-desc {
        font-size: 1rem;
        font-family: var(--font) !important;
        line-height: 2rem;
        padding: 8px 30px;
        background: var(--white-color);
        display: none;
        text-align: justify;
      }
      .selected{
        background-color: #d3d3d3;
      }
    </style>
  </head>

  <body>
    <div class="app">

      <span id="qa-id" class="d-none"> <%=id%> </span>
      <span id="qa-lang"> <%=lang%> </span>
      <%- include('../partials/header.ejs') ,{headerSection} %>
      <div class="root container">
        <section>
          <div class="head">
            <h3><%=lang === 'vi' ? 'Hỏi đáp' : 'Question and Answer'%></h3>
          </div>
          <div class="qa-body row">
            <div class="list-qa col-lg-4 col-sm-12">
              <% listQA.forEach(function(qaItem){ %>
              <div
                class="qa-item-tab hide-on-mobile"
                id="tab_<%= qaItem.id %>"
                onclick="SelectQA('<%= qaItem.id %>')"
              >
                <div class="tab-qa-name">
                  <% const field=`name_${lang}`; %> <%= qaItem[field]%>
                </div>
              </div>

              <% }) %>
              <select
                class="hide-on-pc show-on-mobile form-select mb-3"
                name=""
                id="optTap_qa"
              >
                <% listQA.forEach(function(qaItem){ %>
                <option value="<%= qaItem.id %>">
                  <% const field=`name_${lang}`; %> <%= qaItem[field] %>
                </option>
                <% }) %>
              </select>
            </div>
            <div class="content-qa col-lg-8 col-sm-12"></div>
          </div>
        </section>
      </div>
      <%- include('../partials/footer.ejs'),{footerSection:""} %>
    </div>
    <%- include('../partials/foot.ejs') %>
    <script src="/js/ejsPolicy.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
